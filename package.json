{
  "name": "pixel-forge",
  "version": "1.2.2",
  "description": "A comprehensive generator for social media previews, favicons, and visual assets across all platforms",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "pixel-forge": "dist/cli/index.js",
    "pf": "dist/cli/index.js"
  },
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "typecheck": "tsc --noEmit",
    "test": "jest --passWithNoTests",
    "test:watch": "jest --watch",
    "dev": "pnpm run build && node dist/cli/index.js",
    "start": "node dist/cli/index.js",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "prepare": "pnpm run build",
    "prepack": "pnpm run build",
    "prepublishOnly": "pnpm run lint && pnpm test",
    "release:tag": "git tag v$npm_package_version && git push origin v$npm_package_version",
    "clean": "rimraf dist"
  },
  "keywords": [
    "social-media",
    "opengraph",
    "twitter-cards",
    "favicon",
    "meta",
    "preview",
    "social-cards",
    "icons",
    "visual-assets",
    "pwa",
    "instagram",
    "facebook",
    "linkedin",
    "tiktok",
    "seo",
    "image-generation",
    "typescript",
    "cli",
    "automation",
    "web-development"
  ],
  "author": "devin@devinops.com",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/devints47/pixel-forge.git"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org"
  },
  "bugs": {
    "url": "https://github.com/devints47/pixel-forge/issues"
  },
  "homepage": "https://github.com/devints47/pixel-forge#readme",
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "@jest/globals": "^29.7.0",
    "@types/cli-progress": "^3.11.6",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.16.5",
    "conventional-changelog-cli": "^5.0.0",
    "eslint": "^9.33.0",
    "eslint-plugin-promise": "^7.2.1",
    "jest": "^29.7.0",
    "prettier": "^3.4.2",
    "rimraf": "^6.0.1",
    "ts-jest": "^29.4.1",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.39.1"
  },
  "dependencies": {
    "chalk": "^5.5.0",
    "cli-progress": "^3.12.0",
    "commander": "^14.0.0",
    "jimp": "^0.22.12"
  },
  "engines": {
    "node": ">=18.18.0"
  },
  "funding": {
    "type": "github",
    "url": "https://github.com/sponsors/devints47"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ]
}
