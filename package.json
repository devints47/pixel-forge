{
  "name": "social-forge",
  "version": "0.1.0",
  "description": "A comprehensive generator for social media previews, favicons, and visual assets across all platforms",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "social-forge": "./bin/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "test": "jest",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run lint",
    "clean": "rimraf dist"
  },
  "keywords": [
    "social-media",
    "opengraph",
    "twitter-cards",
    "favicon",
    "meta",
    "preview",
    "social-cards",
    "icons",
    "visual-assets",
    "pwa"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/devints47/social-forge.git"
  },
  "bugs": {
    "url": "https://github.com/devints47/social-forge/issues"
  },
  "homepage": "https://github.com/devints47/social-forge#readme",
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "jest": "^29.0.0",
    "prettier": "^3.0.0",
    "rimraf": "^5.0.0",
    "ts-jest": "^29.0.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@types/sharp": "^0.31.1",
    "chalk": "^5.0.0",
    "commander": "^11.0.0",
    "conf": "^11.0.0",
    "ora": "^7.0.0",
    "sharp": "^0.33.5"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
